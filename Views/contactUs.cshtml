@using Umbraco.Cms.Web.Common.PublishedModels
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    Layout = "mainLayout.cshtml";


    var contactTitle = Model?.Value<string>("contactTitle") ?? "";

    var googleMapUrl = Model?.Value<string>("googleMap") ?? "";

    var contactFormTitle = Model?.Value<string>("contactFormTitle") ?? "Request a callback";

    var contactFormHeadline = Model?.Value<string>("contactFormHeadline") ?? "Let us know about your next project";

    var contactFormDescription = Model?.Value<string>("contactFormDescription") ?? "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas consectetur, ligula semper sagittis lobortis, eros metus efficitur purus";

    var homePage = Umbraco.ContentAtRoot().FirstOrDefault(x => x.ContentType.Alias == "homePage");

    var partnerLogotypes = homePage?.Value<IPublishedContent>("partnerLogotypes")?.Url() ?? "";

}

<section id="contact" class="contact-section">
    
    <div class="contact-header">
        <h1>@contactTitle</h1>
        </div>

    <div class="map-container-fullwidth">
        <iframe src="@googleMapUrl"
                loading="lazy"></iframe>
        
        <div class="map-overlay"></div>
    </div>


        <div class="form-container">
            <div class="form-header">
                <h4>@contactFormTitle</h4>
                <h2>@contactFormHeadline</h2>
                <p>@contactFormDescription</p>
            </div>

            <div class="form-body">
            <form id="callback-form">
                <div class="form-row">
                    <div class="form-group">
                        <input type="text" id="name" name="name" placeholder="Name" required>
                    </div>
                    <div class="form-group">
                        <input type="tel" id="phone" name="phone" placeholder="Phone" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <input type="email" id="email" name="email" placeholder="Email address" required>
                    </div>
                    <div class="form-group">
                        <select id="service" name="service">
                            <option value="financial-consulting">Financial consulting</option>
                            <option value="tax-advisory">Tax advisory</option>
                            <option value="investment-planning">Investment planning</option>
                        </select>
                    </div>
                </div>

                <div class="form-group submit-group">
                    <button type="submit" class="btn-submit">Submit</button>
                </div>
            </form>

            </div>
        </div>
    
</section>


<section id="partner-logotypes" class="partner-logotypes-section">
    <div class="container">
        <div class="logo">
            <img src="@partnerLogotypes" alt="Partner Logotypes">
        </div>
    </div>
</section>
